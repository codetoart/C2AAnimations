<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_color="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transitions_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/app_bar_activity_main" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebeff1"
        android:gravity="center"
        android:orientation="vertical">
        <com.android.codetoart.c2aanimations.widget.SwitchButtonView
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            custom_color:color1="@color/white"
            custom_color:color2="@color/dark_blue" />
    </LinearLayout>
</LinearLayout>